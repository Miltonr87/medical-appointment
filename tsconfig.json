{
  "files": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.node.json"
    }
  ],
  "compilerOptions": {
    /* üîß Resolu√ß√£o moderna (necess√°ria para Tailwind 4 e libs ESM) */
    "moduleResolution": "bundler",
    "module": "esnext",
    "target": "ES2022",
    /* üß† Integra√ß√£o Next.js + TypeScript */
    "jsx": "preserve",
    "incremental": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    /* üß© Base path e aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    /* ‚öôÔ∏è Regras de compila√ß√£o relaxadas */
    "skipLibCheck": true,
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "strictNullChecks": false,
    "strict": false,
    "allowJs": true,
    /* üìö Bibliotecas padr√£o */
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    /* üß© Plugin Next.js */
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}